@using BTIT.EPM.Authorization
@using BTIT.EPM.Web.Areas.App.Models.DocumentRequestAuditTrails
@using BTIT.EPM.Web.Areas.App.Startup
@model DocumentRequestAuditTrailsViewModel
@{
    ViewBag.CurrentPageName = AppPageNames.Tenant.DocumentRequestAuditTrails;
}
@section Scripts
{
    <script abp-src="/view-resources/Areas/App/Views/DocumentRequestAuditTrails/Index.js" asp-append-version="true"></script>
}

 <div class="kt-subheader kt-grid__item">
  
    <div class="kt-subheader__main">
        <h3 class="kt-subheader__title">
            <span>@L("DocumentRequestAuditTrails")</span>
        </h3>
        <span class="kt-subheader__separator kt-subheader__separator--v"></span>
        <span class="kt-subheader__desc">
            @L("DocumentRequestAuditTrailsHeaderInfo")
        </span>
    </div>
    @*<div class="kt-subheader__toolbar">
        <div class="kt-subheader__wrapper">
            <button id="ExportToExcelButton" class="btn btn-outline-success"><i class="fa fa-file-excel"></i> @L("ExportToExcel")</button>
            @if (IsGranted(AppPermissions.Pages_DocumentRequestAuditTrails_Create))
            {
                <button id="CreateNewDocumentRequestAuditTrailButton" class="btn btn-primary blue"><i class="fa fa-plus"></i> @L("CreateNewDocumentRequestAuditTrail")</button>
            }
        </div>
    </div>*@
  
</div>
<div class="kt-content">
    <div class="kt-portlet kt-portlet--mobile">
        <div class="kt-portlet__body">
            <div class="kt-form">
                <div class="row align-items-center mb-4">
                    <div class="col-xl-12">
                        <div class="form-group align-items-center">
                            <div class="input-group">
                                <input type="text" id="DocumentRequestAuditTrailsTableFilter" class="form-control m-input" placeholder="@L("SearchWithThreeDot")" value="@Model.FilterText">
                                <span class="input-group-btn">
                                    <button id="GetDocumentRequestAuditTrailsButton" class="btn btn-primary" type="submit"><i class="flaticon-search-1"></i></button>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
			</div>
                <div id="AdvacedAuditFiltersArea" style="display: none" class="row mb-4">
                    <div class="col-md-12">
						<div class="kt-separator kt-separator--border-dashed"></div>
					</div>

							<div class="col-md-3">
								<label for="TypeFilterId">@L("Type")</label>
								<select class="form-control" name="TypeFilter" id="TypeFilterId">
								<option value="-1">@L("All")</option>
																			<option value="0">@L("Enum_AuditTrailType_0")</option>

										<option value="1">@L("Enum_AuditTrailType_1")</option>

										<option value="2">@L("Enum_AuditTrailType_2")</option>

										<option value="3">@L("Enum_AuditTrailType_3")</option>

										<option value="4">@L("Enum_AuditTrailType_4")</option>

										<option value="5">@L("Enum_AuditTrailType_5")</option>


								</select>
                            </div>
							<div class="col-md-3">
								<div class="form-group">
									<label for="ClientIpAddressFilterId">@L("ClientIpAddress")</label>
									<input type="text" class="form-control" name="clientIpAddressFilter" id="ClientIpAddressFilterId">
								</div>
                            </div>
							<div class="col-md-3">
								<div class="form-group">
									<label for="DocumentRequestDocumentTitleFilterId">(@L("DocumentRequest")) @L("DocumentTitle")</label>
									<input type="text" class="form-control" name="documentRequestDocumentTitleFilter" id="DocumentRequestDocumentTitleFilterId">
								</div>
                            </div>
							<div class="col-md-3">
								<div class="form-group">
									<label for="RecipientFirstNameFilterId">(@L("Recipient")) @L("FirstName")</label>
									<input type="text" class="form-control" name="recipientFirstNameFilter" id="RecipientFirstNameFilterId">
								</div>
                            </div>

                </div>
                <div class="row mb-4">
                    <div class="col-xl-12">
                        <span id="ShowAdvancedFiltersSpan" class="text-muted clickable-item"><i class="fa fa-angle-down"></i> @L("ShowAdvancedFilters")</span>
                        <span id="HideAdvancedFiltersSpan" class="text-muted clickable-item" style="display: none"><i class="fa fa-angle-up"></i> @L("HideAdvancedFilters")</span>
                    </div>
                </div>
            <div class="row align-items-center">
                <table id="DocumentRequestAuditTrailsTable" class="display table table-striped table-bordered table-hover dt-responsive nowrap">
                    <thead>
                        <tr>
                            <th>@L("Actions")</th>
								<th>@L("Type")</th>
								<th>@L("ClientIpAddress")</th>
								<th>@L("DocumentRequestDocumentTitle")</th>
								<th>@L("RecipientFirstName")</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
  
</div>