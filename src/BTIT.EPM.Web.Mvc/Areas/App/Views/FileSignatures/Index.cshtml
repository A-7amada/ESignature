@using BTIT.EPM.Authorization
@using BTIT.EPM.Web.Areas.App.Models.FileSignatures
@using BTIT.EPM.Web.Areas.App.Startup
@model FileSignaturesViewModel
@{ ViewBag.CurrentPageName = AppPageNames.Common.FileSignatures; }
@section Styles{
    
}
@section Scripts
{
    <script abp-src="/view-resources/Areas/App/Views/FileSignatures/Index.js" asp-append-version="true"></script>
  

}

<div class="content d-flex flex-column flex-column-fluid">

    <abp-page-subheader title='@L("FileSignatures")' description='@L("FileSignaturesHeaderInfo")'>
        <button id="ExportToExcelButton" class="btn btn-outline-success"><i class="fa fa-file-excel"></i> @L("ExportToExcel")</button>

        @if (IsGranted(AppPermissions.Pages_FileSignatures_Create))
        {
<button id="CreateNewFileSignatureButton" class="btn btn-primary blue"><i class="fa fa-plus"></i> @L("CreateNewFileSignature")</button>}
    </abp-page-subheader>

    <div class="@(await GetContainerClass())">
        <div class="card card-custom gutter-b">
            <div class="card-body">

                <div class="form">
                        <div class="row align-items-center mb-4">
                            <div class="col-xl-12">
                                <div class="form-group align-items-center">
                                    <div class="input-group">
                                        <input type="text" id="FileSignaturesTableFilter" class="form-control m-input" placeholder='@L("SearchWithThreeDot")' value="@Model.FilterText">
                                        <span class="input-group-btn">
                                            <button id="GetFileSignaturesButton" class="btn btn-primary" type="submit"><i class="flaticon-search-1"></i></button>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                        <div id="AdvacedAuditFiltersArea" style="display: none" class="row mb-4">
                            <div class="col-md-12">
                                <div class="separator separator-dashed"></div>
                            </div>

                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label for="NameFilterId">@L("Name")</label>
                                            <input type="text" class="form-control" name="nameFilter" id="NameFilterId">
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label for="DescribtionFilterId">@L("Describtion")</label>
                                            <input type="text" class="form-control" name="describtionFilter" id="DescribtionFilterId">
                                        </div>
                                    </div>
                        </div>
                        <div class="row mb-4">
                            <div class="col-xl-12">
                                <span id="ShowAdvancedFiltersSpan" class="text-muted clickable-item"><i class="fa fa-angle-down"></i> @L("ShowAdvancedFilters")</span>
                                <span id="HideAdvancedFiltersSpan" class="text-muted clickable-item" style="display: none"><i class="fa fa-angle-up"></i> @L("HideAdvancedFilters")</span>
                            </div>
                        </div>
                    <div class="row align-items-center">
                        <table id="FileSignaturesTable" class="display table table-striped table-bordered table-hover dt-responsive nowrap">
                            <thead>
                                <tr>
                                    <th></th>

                                    <th>@L("Actions")</th>
                                        <th>@L("Name")</th>
                                        <th>@L("Describtion")</th>

                                </tr>
                            </thead>
                        </table>
                    </div>


                <div id="host"></div>




            </div>
        </div>
    </div>
</div>
